{
	"name": "vscode-infocus",
	"displayName": "VSCode InFocus",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Todoist",
		"Notes",
		"Todo",
		"Other"
	],
	"activationEvents": [
		"onView:infocus.todoist.TreeView"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "infocus-sidebar-container",
					"title": "InFocus Explorer",
					"icon": "media/inFocusLogo.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "infocus.todoist.TreeView",
				"contents": "No projects list found.\n[Add project](command:<todo:здесь_будет_команда_добавления_проекта_и_или_создания_элемента>)",
				"when": "!!config.infocus.todoist.token"
			},
			{
				"view": "infocus.todoist.TreeView",
				"contents": "Set the token to get started.\n[Set Token](command:workbench.action.openSettings2?infocus.todoist.token)",
				"when": "!config.infocus.todoist.token"
			}
		],
		"views": {
			"infocus-sidebar-container": [
				{
					"id": "infocus.todoist.TreeView",
					"name": "Todoist"
				},
				{
					"id": "infocus.notion.TreeView",
					"name": "Notion",
					"when": "config.infocus.notion.enabled"
				}
			]
		},
		"commands": [
			{
				"command": "infocus-open-settings",
				"title": "Open Settings"
			},
			{
				"command": "infocus.todoist.toggleTask",
				"title": "Toggle Task",
				"category": "InFocus",
				"icon": "$(check)"
			},
			{
				"command": "infocus.todoist.editTask",
				"title": "Edit Task",
				"category": "InFocus",
				"icon": "$(edit)"
			},
			{
				"command": "infocus.todoist.deleteTask",
				"title": "Delete Task",
				"category": "InFocus",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "infocus.todoist.toggleTask",
					"group": "inline",
					"when": "viewItem == taskitem"
				},
				{
					"command": "infocus.todoist.editTask",
					"group": "inline",
					"when": "viewItem == taskitem"
				},
				{
					"command": "infocus.todoist.deleteTask",
					"group": "inline",
					"when": "viewItem == taskitem"
				}
			]
		},
		"configuration": {
			"title": "InFocus",
			"properties": {
				"infocus.todoist.token": {
					"type": "string",
					"description": "Your Todoist API Token"
				},
				"infocus.notion.enabled": {
					"type": "boolean",
					"description": "Enable notion tree view. Reload requires after toggle."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/qs": "^6.9.7",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"effector": "^22.1.2",
		"qs": "^6.10.1"
	}
}
